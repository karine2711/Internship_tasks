<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="hospitalAddress" class="spring.beans.homeworkXML.Address">
        <constructor-arg name="country" value="Armenia"/>
        <constructor-arg name="city" value="Yerevan"/>
        <constructor-arg name="street" value="Margaryan"/>
        <constructor-arg name="buildingNumber" value="6"/>
    </bean>

    <bean id="hospital" class="spring.beans.homeworkXML.Building" >
        <constructor-arg name="address" ref="hospitalAddress"/>
    </bean>

</beans>